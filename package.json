{
  "name": "khelwell",
  "version": "1.0.0",
  "description": "KhelWell - Your Game. Your Journey. All in One Place. A comprehensive sports turf booking and events platform.",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "setup-db": "cd backend && node setup-mysql.js",
    "seed": "cd backend && node seed-data.js"
  },
  "keywords": [
    "khelwell",
    "sports",
    "turf-booking",
    "events",
    "community",
    "react",
    "nodejs",
    "mysql"
  ],
  "author": "Creatimatix",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 